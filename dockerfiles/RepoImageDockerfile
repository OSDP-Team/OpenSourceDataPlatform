FROM python:3.10

RUN apt-get update && apt-get install -y git

WORKDIR /jobs

# Copy entire repo to /jobs (so Stackable can copy from here)
COPY . /jobs

# Install Python dependencies if you have requirements.txt
# RUN pip install --no-cache-dir -r requirements.txt

# Optional: if your spark job runs Python scripts, you can set an entrypoint or CMD
# But Stackable usually runs the spark-submit command itself, so just keep the container ready

CMD ["sleep", "infinity"]
